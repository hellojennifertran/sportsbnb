<div class="container">
  <div class="col-4 p-3 bg-gradient-info text-white">
    <h1>Adventure awaits you</h1>
    <p>Rent sport gear within your location</p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary"%>
        </div>
        <div class="form-links">
          <label for="sign-up" style="color: #ffffff;">New to SportsBnB?<%= render "devise/shared/links" %></label>
        </div>
      <% end %>
    </div>
</div>