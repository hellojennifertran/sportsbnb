<div>
  <div class="listing-images">
    <!--carousel image-->
  </div>
  <div class="rental-details">
    <div class="create-banner">
      <h1>Post your Listing</h1>
    </div>
    <div class="listing-form">
      <%= simple_form_for @rental do |f| %>
        <%= f.input :brand %>
        <%= f.input :model %>
