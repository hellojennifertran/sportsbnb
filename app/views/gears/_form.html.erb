<%= simple_form_for @gear do |f| %>
  <%= f.input :brand %>
  <%= f.input :model %>
  <%= f.input :description %>
  <%= f.input :category, collection: ["Skiing", "Snowboarding", "Basketball", "Tennis", "Soccer", "Flag Football", "Hiking", "Rock Climbing", "Golf"].sort, input_html: { multiple: false } %>
  <%= f.input :price_per_day %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, "Create Listing", class: "btn btn-primary"%>
<% end %>
